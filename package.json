{
  "name": "viztritr",
  "version": "0.1.0",
  "description": "Visual Iteration Orchestrator - Autonomous UI/UX improvement system",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "viztritr": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:performia": "npm run build && node dist/test-performia.js",
    "demo": "npm run build && node dist/demo.js",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.{ts,json}'",
    "format:check": "prettier --check 'src/**/*.{ts,json}'",
    "typecheck": "tsc --noEmit",
    "precommit": "npm run lint && npm run format:check && npm run typecheck"
  },
  "keywords": [
    "ui",
    "ux",
    "design",
    "automation",
    "ai",
    "claude",
    "vision",
    "iteration"
  ],
  "author": "Daniel Connolly",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "dotenv": "^16.4.0",
    "ora": "^5.4.1",
    "puppeteer": "^23.0.0",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.18.8",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.4",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
